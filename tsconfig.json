{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@hooks/*": ["./src/hooks/*"],
      "@components/*": ["./src/components/*"],
      "@ui/*": ["./src/ui/*"],
      "@lib/*": ["./src/lib/*"],
      "@xmtp/agents": ["./src/lib/agent-utils"],
      "@xmtp/use-client": ["./src/xmtp-hooks/use-client"],
      "@xmtp/use-conversations": ["./src/xmtp-hooks/use-conversations"],
      "@xmtp/use-conversation": ["./src/xmtp-hooks/use-conversation"],
      "@xmtp/use-conversation-members": [
        "./src/xmtp-hooks/use-conversation-members"
      ],
      "@xmtp/utils": ["./src/xmtp-hooks/utils"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src", "scripts", "vite.config.ts", "postcss.config.cjs"],
  "exclude": ["dist", "node_modules"]
}
